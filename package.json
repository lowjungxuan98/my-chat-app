{
  "name": "my-chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.development -- next dev --turbopack",
    "local": "dotenv -e .env.local -- next dev --turbopack",
    "prd": "dotenv -e .env.production -- next start",
    "build": "prisma generate --no-engine && next build",
    "build:dev": "dotenv -e .env.development -- prisma generate --no-engine && next build",
    "build:local": "dotenv -e .env.local -- prisma generate --no-engine && next build",
    "build:prd": "dotenv -e .env.production -- prisma generate --no-engine && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate --no-engine",
    "db:migrate": "dotenv -e .env.local -- prisma migrate deploy",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate deploy",
    "db:migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "db:status": "dotenv -e .env.local -- prisma migrate status",
    "db:status:dev": "dotenv -e .env.development -- prisma migrate status",
    "db:status:prod": "dotenv -e .env.production -- prisma migrate status",
    "db:generate": "dotenv -e .env.local -- prisma generate --no-engine"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@stream-io/stream-chat-css": "^5.11.2",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "prisma": "^6.13.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "stream-chat": "^9.14.0",
    "stream-chat-react": "^13.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
